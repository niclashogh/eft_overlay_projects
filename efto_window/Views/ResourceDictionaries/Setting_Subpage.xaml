<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--#region Header-->
    <Style TargetType="Border" x:Name="HEADER_BORDER">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="500,0"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Background" Value="#BB000000"/>
        <Setter Property="BorderThickness" Value="10,0"/>
        <Setter Property="BorderBrush" Value="Goldenrod"/>
    </Style>

    <Style TargetType="TextBlock" x:Name="HEADER_TEXT">
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <!--#endregion-->

    <Style TargetType="Border" x:Name="CONTENT_BORDER">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="100,10"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Background" Value="#BB000000"/>
        <Setter Property="BorderThickness" Value="10,0"/>
        <Setter Property="BorderBrush" Value="RoyalBlue"/>
    </Style>

    <!--#region Assets-->
    <Style TargetType="StackPanel" x:Name="ASSETS_STACKPANEL">
        <Setter Property="Orientation" Value="Vertical"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="10"/>
    </Style>

    <Style TargetType="Button" x:Name="ASSETS_BTN">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Background" Value="RoyalBlue"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
    <!--#endregion-->
    
    <Style TargetType="StackPanel" x:Name="INFORMATION_STACKPANEL">
        <Setter Property="Orientation" Value="Vertical"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!--#region Editing-->
    <Style TargetType="StackPanel" x:Name="EDITING_STACKPANEL">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>

    <Style TargetType="Button" x:Name="UPDATE_BTN">
        <Setter Property="Content" Value="UPDATE"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Background" Value="Goldenrod"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <Style TargetType="Button" x:Name="REMOVE_BTN">
        <Setter Property="Content" Value="REMOVE"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Background" Value="DarkRed"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
    <!--#endregion-->

    <!--#region Add new-->
    <Style TargetType="Border" x:Name="ADDNEW_BORDER">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="300,0"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Background" Value="#BB000000"/>
        <Setter Property="BorderThickness" Value="10,0"/>
        <Setter Property="BorderBrush" Value="Goldenrod"/>
    </Style>

    <Style TargetType="TextBox" x:Name="ADDNEW_TEXTBOX">
        <Setter Property="Margin" Value="10"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <Style TargetType="Button" x:Name="ADDNEW_BTN">
        <Setter Property="Content" Value="ADD"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="Background" Value="Goldenrod"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
    <!--#endregion-->
    
</ResourceDictionary>
