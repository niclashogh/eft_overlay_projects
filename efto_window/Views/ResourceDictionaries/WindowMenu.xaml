<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="AppBarButton" x:Name="WINDOW_MENU_BTN">
        <Setter Property="Height" Value="45"/>
        <Setter Property="Icon" Value="GlobalNavigationButton"/>
        <Setter Property="CornerRadius" Value="0,0,0,0"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Margin" Value="-2,-4"/>
    </Style>

    <Style TargetType="SplitView" x:Name="WINDOW_MENU_PANE">
        <Setter Property="DisplayMode" Value="Overlay"/>
        <Setter Property="IsPaneOpen" Value="False"/>
        <Setter Property="OpenPaneLength" Value="250"/>
        <Setter Property="PaneBackground" Value="#141414"/>
        <Setter Property="IsTabStop" Value="False"/>
    </Style>
    
</ResourceDictionary>
