<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="efto_window.Views.Resource_Dictionaries">

    <Style TargetType="AppBarButton" x:Name="Default_AppBarButton">
        <Setter Property="Height" Value="45"/>
        <Setter Property="Icon" Value="GlobalNavigationButton"/>
        <Setter Property="CornerRadius" Value="0,0,0,0"/>
        <Setter Property="IsTabStop" Value="False"/>
    </Style>
    
    <Style TargetType="SplitView" x:Name="Default_SplitView">
        <Setter Property="DisplayMode" Value="Overlay"/>
        <Setter Property="IsPaneOpen" Value="False"/>
        <Setter Property="OpenPaneLength" Value="250"/>
        <Setter Property="PaneBackground" Value="#141414"/>
        <Setter Property="IsTabStop" Value="False"/>
    </Style>

    <Style TargetType="NavigationViewItem" x:Name="Default_SplitView_NavigationItem">
        <Setter Property="Margin" Value="0,10,0,0"/>
        <Setter Property="Padding" Value="0,10"/>
        <Setter Property="IsTabStop" Value="False"/>
    </Style>
    
</ResourceDictionary>
